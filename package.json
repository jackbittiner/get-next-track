{
  "private": true,
  "name": "playthru",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "client": "yarn workspace client start",
    "graphql": "yarn workspace graphql start",
    "start": "concurrently --kill-others-on-fail \"yarn graphql\"  \"yarn client\" ",
    "test-graphql": "cd packages/graphql && npm test",
    "test-client": "cd packages/client && npm test"
  },
  "dependencies": {
    "concurrently": "^4.1.2"
  },
  "engines": {
    "node": "10.13.0"
  }
}
